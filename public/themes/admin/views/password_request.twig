<div class="logo">
    <img src="{{ asset('images/logo/yourbag.png') }}" class="logo-default" alt="{{ asset('images/logo/yourbag.png') }}" style="height:100px;width:150px;" />
</div>
<!-- END LOGO -->
<!-- BEGIN LOGIN -->

<!-- BEGIN LOGIN -->
<div class="content">
    <!-- BEGIN FORGOT PASSWORD FORM -->
    <form class="login-form" action="{{ route('password_request_send') }}" method="post">
        {{ csrf_field() }}

        <div class="form-title">
            <span class="form-title">Forget Password ?</span>
            <span class="form-subtitle">Enter your e-mail to reset it.</span>
        </div>

        {% if(session('scsMsg')) %}
            <div class="alert alert-success">
                <button class="close" data-close="alert"></button>
                <span>{{ session('scsMsg') }}</span>
            </div>
        {% endif %}


        {% if errors.any %}
            {% for error in errors.all %}
                <div class="alert alert-danger">
                    <button class="close" data-close="alert"></button>
                    <span>{{ error }}</span>
                </div>
            {% endfor %}
        {% endif %}

        <div class="form-group">
            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="username" />
        </div>
        <div class="form-actions">
            <a id="back-btn" class="btn btn-default" href="{{ route('login') }}">Back</a>
            <button type="submit" class="btn btn-primary uppercase pull-right">Submit</button>
        </div>
    </form>
    <!-- END FORGOT PASSWORD FORM -->
</div>



