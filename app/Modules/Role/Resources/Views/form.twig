{% extends "admin::layouts.layout" %}

{% block addcss %}
{{ asset('plugins/icheck/skins/all.css')|css_tag }}
{% endblock %}

{% block pageheader %}
<!-- BEGIN PAGE HEAD-->
<div class="page-head">
    <div class="container">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>{{ string_menuname }}
                <small>Form {{ string_menuname }}</small>
            </h1>
        </div>
        <!-- END PAGE TITLE -->
    </div>
</div>
<!-- END PAGE HEAD-->
{% endblock %}


{% block breadcrumbs %}
<!-- BEGIN PAGE BREADCRUMBS -->
<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="{{ url('/home') }}">Home</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="javascript:void(0)">Admin</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="{{ route('role_show') }}">{{ string_menuname }}</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <span>Form</span>
    </li>
</ul>
<!-- END PAGE BREADCRUMBS -->
{% endblock %}


{% block body %}

<div class="row">
  <div class="col-md-12">
      <!-- BEGIN VALIDATION STATES-->
      <div class="portlet light portlet-fit portlet-form bordered">
          <div class="portlet-title">
              <div class="caption">
                  <i class="glyphicon glyphicon-file font-green"></i>
                  <span class="caption-subject font-green bold uppercase">Form {{ string_menuname }}</span>
              </div>
          </div>
          <div class="portlet-body">
              <!-- BEGIN FORM-->


              <form action="{% if state == "add" %}{{ route('role_post') }}{% else %}{{ route('role_update') }}{% endif %}" name="form_{{ string_menuname }}" id="form_{{ string_menuname }}" class="form-horizontal" method="post">
                  {{ csrf_field() }}
                  <div class="form-body">
                    <div class="form-group {% if (errors.has('name')) %}has-error{% endif %}">
                        <label class="control-label col-md-3">Name {{ string_menuname }}
                            <span class="required"> * </span>
                        </label>
                        <div class="col-md-6">
                          <div class="input-icon right">
                              <i class="fa"></i>
                              <input type="text" class="form-control" id="name" name="name" placeholder="Name" autocomplete="off" value="{% if state == 'add' %}{{ old('name') }}{% else %}{{ Role.name }}{% endif %}">
                              <input type="hidden" class="form-control" id="id" name="id" value="{{ id }}" />
                              {% if (errors.has('name')) %}<span class="help-block"> {{ errors.first('name') }} </span>{% endif %}
                          </div>
                           </div>
                    </div>
                    <div class="form-group {% if (errors.has('display_name')) %}has-error{% endif %}">
                        <label class="control-label col-md-3">Display Name
                            <span class="required"> * </span>
                        </label>
                        <div class="col-md-6">
                          <div class="input-icon right">
                              <i class="fa"></i>
                              <input type="text" class="form-control" id="display_name" name="display_name" placeholder="Display Name" autocomplete="off" value="{% if state == 'add' %}{{ old('display_name') }}{% else %}{{ Role.display_name }}{% endif %}">
                              {% if (errors.has('display_name')) %}<span class="help-block"> {{ errors.first('display_name') }} </span>{% endif %}
                          </div>
                           </div>
                    </div>
                    <div class="form-group {% if (errors.has('description')) %}has-error{% endif %}">
                        <label class="control-label col-md-3">Description
                            <span class="required"> * </span>
                        </label>
                        <div class="col-md-6">
                          <div class="input-icon right">
                              <i class="fa"></i>
                              <textarea class="form-control" id="description" name="description" placeholder="Display Name" autocomplete="off">{% if state == 'add' %}{{ old('description') }}{% else %}{{ Role.description }}{% endif %}</textarea>
                              {% if (errors.has('description')) %}<span class="help-block"> {{ errors.first('display_name') }} </span>{% endif %}
                          </div>
                           </div>
                    </div>

                    <div class="table-scrollable">
                        <table id="list_roles" class="table table-striped table-bordered table-hover table-header-fixed dataTable no-footer" role="grid" aria-describedby="sample_3_info">
                            <thead>
                              <tr>
                                      <th>No.</th>
                                      <th>Menu</th>
                                      <th colspan="3">Access</th>
                              </tr>
                            </thead>
                            <tbody>
                                {% set Permissions = call_helpers('get_ListPermissionbyParentID',0) %}
                                {% for permission in Permissions %}
                                <tr>
                                    <td>{{ permission.id}}</td>
                                    <td>{{ permission.display_name}}</td>
                                    <td colspan="3">
                                        {% set checklist = false %}
                                        {% for value in listPermissions %}
                                            {% if value.permission_id == permission.id %}
                                                {% set checklist = true %}
                                            {% endif %}
                                        {% endfor %}
                                            <input type="checkbox" name="access{{ permission.id }}" class="icheck" value="{{ permission.id }}" {% if checklist == true %} checked="checked" {% endif %}>
                                    </td>
                                </tr>
                                {% set PermissionParents = call_helpers('get_ListPermissionbyParentID',permission.id) %}
                                {% if PermissionParents %}
                                    {% for PermissionParent in PermissionParents %}
                                    <tr>
                                        <td>{{ PermissionParent.id}}</td>
                                        <td><i class="fa fa-chevron-right"></i>&nbsp;{{ PermissionParent.display_name}}</td>
                                        <td><small><strong><i>Parent</i></strong></small></td>
                                        <td>
                                            {% set checklist = false %}
                                            {% for value in listPermissions %}
                                                {% if value.permission_id == PermissionParent.id %}
                                                    {% set checklist = true %}
                                                {% endif %}
                                            {% endfor %}
                                                <input type="checkbox" name="access{{ PermissionParent.id }}" class="icheck" value="{{ PermissionParent.id }}" {% if checklist == true %} checked="checked" {% endif %}>
                                        </td>
                                        <td></td>
                                    </tr>

                                    {% set PermissionSubParents = call_helpers('get_ListPermissionbyParentID',PermissionParent.id) %}
                                    {% if PermissionSubParents %}
                                        {% for PermissionSubParent in PermissionSubParents %}
                                        <tr>
                                            <td>{{ PermissionSubParent.id}}</td>
                                            <td><i class="fa fa-chevron-right"></i>&nbsp;{{ PermissionSubParent.display_name}}</td>
                                            <td></td>
                                            <td><small><strong><i>Sub</i></strong></small></td>
                                            <td>
                                                {% set checklist = false %}
                                                {% for value in listPermissions %}
                                                    {% if value.permission_id == PermissionSubParent.id %}
                                                        {% set checklist = true %}
                                                    {% endif %}
                                                {% endfor %}
                                                    <input type="checkbox" name="access{{ PermissionSubParent.id }}" class="icheck" value="{{ PermissionSubParent.id }}" {% if checklist == true %} checked="checked" {% endif %}>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    {% endif %}

                                    {% endfor %}
                                {% endif %}

                                {% endfor %}
                            </tbody>
                        </table>
                    </div>



                  </div>
                  <div class="form-actions">
                      <div class="row">
                          <div class="col-md-offset-3 col-md-9">
                            <a  class="btn btn-default" href="{{ route('role') }}">Batal</a>
                            <button type="submit" class="btn btn-success">Simpan</button>
                          </div>
                      </div>
                  </div>
              </form>
              <!-- END FORM-->
          </div>
          <!-- END VALIDATION STATES-->
      </div>
  </div>
</div>


{% endblock %}


{% block addjs %}
<!-- CHECKBOX & RADIO -->
{{ asset('plugins/icheck/icheck.min.js')|script_tag }}
{{ theme_asset('admin::js/script/form-icheck.min.js')|script_tag }}

{{ asset('modules/role/main.js')|script_tag }}

{% endblock %}
